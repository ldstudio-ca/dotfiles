# Disable the startup message
startup_message off
altscreen on
term screen-256color
hardstatus on
hardstatus alwayslastline '%{wk}[ %{g}][%= %{wk}%?%-Lw%?%{=b kR}(%{W}%n*%f %t%?(%u)%?%{=b kR})%{= kw}%?%+Lw%?%?%= %{g}][%{Y}%l%{g}]%{=b C}[ %m/%d %c ]%{W}'
sorendition kw

# hardcopydir:  The directory which contains all hardcopies.
hardcopydir ~/.screen